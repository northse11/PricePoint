<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PricePoint.Pages.SignUpPage"
             Title="SignUpPage">
    <VerticalStackLayout Padding="5" Spacing="10" BackgroundColor="AntiqueWhite">
        <Label Text="Sign Up"
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="Black"/>
        <Entry x:Name="entryUsername" Placeholder="Username" BackgroundColor="White"/>
        <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True" BackgroundColor="White"/>
        <Button x:Name="btnSignup" Text="Sign Up" Clicked="btnSignup_Clicked" BackgroundColor="DarkSlateGrey" TextColor="white"/>
    </VerticalStackLayout>
</ContentPage>
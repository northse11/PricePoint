<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PricePoint.Pages.WelcomePage"
             Title="WelcomePage">
    <VerticalStackLayout Padding="5" Spacing="10" BackgroundColor="AntiqueWhite">
        <Label Text="Price Point"
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="Black"/>
        <Label Text="Welcome"
               VerticalOptions="Center" 
               HorizontalOptions="Center" 
               FontSize="Large"
               FontAttributes="Bold"
               TextColor="Black"/>
        <Label x:Name="lbl"/>
        <Image Source="pricepoint.jpg" HeightRequest="300" WidthRequest="300" HorizontalOptions="Center"/>
        <Button x:Name="btnLogin" Text="Login" Clicked="btnLoginClicked" WidthRequest="300" BackgroundColor="DarkSlateGrey" TextColor="White"/>
        <Button x:Name="btnSignup" Text="Sign Up" Clicked="btnSignupClicked" WidthRequest="300" BackgroundColor="DarkSlateGrey"  TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
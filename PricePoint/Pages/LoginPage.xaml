<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PricePoint.Pages.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="5" Spacing="10" BackgroundColor="AntiqueWhite">
        <Label 
            Text="Login"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Large"
            FontAttributes="Bold"
            TextColor="Black"/>
        <Entry x:Name="entryUsername" Placeholder="Username" BackgroundColor="White"/>
        <Entry x:Name="entryPassword" Placeholder="Password" IsPassword="True" BackgroundColor="White"/>
        <Button x:Name="btnLogin" Text="Login" Clicked="btnLogin_Clicked" BackgroundColor="DarkSlateGrey" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
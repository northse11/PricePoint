<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PricePoint.Pages.HomePage"
             Title="HomePage">
    <Grid RowDefinitions="250, *">
        <CollectionView x:Name="Cv" ItemsLayout="HorizontalList" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5" WidthRequest="120">
                            <Label Text="{Binding Name}" FontSize="20" FontAttributes="Bold"/>
                            <Button Text="Select Restaurant"
                Clicked="OnSelectRestaurantButtonClicked"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ListView x:Name="Lv" HasUnevenRows="True" Grid.Row="1">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <VerticalStackLayout Padding="5">
                        <Label Text="{Binding ItemName}" FontSize="20" FontAttributes="Bold"/>
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0" Text="{Binding Price}"/>
                        </Grid>
                    </VerticalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PricePoint.Pages.MenuSelectionPage"
             Title="Restaurant Menu">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Label x:Name="RestaurantTitle"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="DarkSlateGray" />
        <ListView x:Name="MenuListView"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="5">
                            <Label Text="{Binding ItemName}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding Price, StringFormat='Price: {0:C}'}" FontSize="14"/>
                            <Label Text="{Binding ItemDescription}" FontSize="12" TextColor="Gray"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>